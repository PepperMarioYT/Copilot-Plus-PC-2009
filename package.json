{
  "name": "copilot-plus-pc-2009",
  "version": "1.0.0",
  "description": "Copilot+ PC 2009: Bringing Microsoft Copilot features to Windows 7-8.1",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:ts": "tsc",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "PepperMario",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron": "^33.2.0",
    "electron-updater": "^4.6.5",
    "fs-extra": "^11.2.0",
    "screenshot-desktop": "^1.15.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/screenshot-desktop": "^1.12.3",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.peppermarioyesiamnotacompany.copilotpluspc2009",
    "productName": "Copilot+ PC 2009",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "node_modules/**/*",
      "differentFiles.zip"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "portable": {
      "artifactName": "copilot-plus-pc-2009-portable.zip"
    }
  }
}
